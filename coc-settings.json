{
  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "haskell",
    "lhaskell"
  ],
  "diagnostic.checkCurrentLine": true,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "disableSnippetCompletion": true,
      "settings": {
        "hlintOn": true
      }
    }
  }
}
